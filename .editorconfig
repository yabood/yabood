# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false

# YAML files
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# JavaScript and TypeScript files
[*.{js,jsx,ts,tsx,mjs,cjs}]
indent_size = 2

# CSS and related files
[*.{css,scss,sass,less}]
indent_size = 2

# HTML and template files
[*.{html,astro,vue,svelte}]
indent_size = 2

# Configuration files
[{package.json,.prettierrc,.eslintrc,.babelrc}]
indent_size = 2

# Makefiles
[Makefile]
indent_style = tab