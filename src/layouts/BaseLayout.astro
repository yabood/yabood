---
import '../styles/global.css';
import Seo from '../components/Seo.astro';

export interface Props {
  title: string;
  description: string;
  image?: string;
  canonical?: string;
  type?: 'website' | 'article';
  publishedDate?: Date;
  modifiedDate?: Date;
  author?: string;
  tags?: string[];
}

const { title, description, ...seoProps } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="alternate" type="application/rss+xml" title="RSS Feed" href="/rss.xml" />
    <link rel="sitemap" type="application/xml" href="/sitemap-index.xml" />
    <meta name="generator" content={Astro.generator} />
    
    <Seo title={title} description={description} {...seoProps} />
  </head>
  <body>
    <a href="#main" class="sr-only focus:not-sr-only focus:absolute focus:left-4 focus:top-4 focus:z-50 focus:rounded focus:bg-accent focus:px-4 focus:py-2 focus:text-white">
      Skip to main content
    </a>
    <slot />
  </body>
</html>