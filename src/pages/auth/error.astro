---
import Layout from '../../layouts/BaseLayout.astro';

const url = new URL(Astro.request.url);
const error = url.searchParams.get('error') ?? 'Unknown error';
---

<Layout title="Authentication Error" description="Authentication error">
  <div class="min-h-screen flex items-center justify-center bg-gray-50">
    <div class="max-w-md w-full space-y-6 bg-white p-6 rounded-lg shadow">
      <h1 class="text-xl font-semibold text-red-600">Authentication Error</h1>
      <p class="text-gray-700">{error}</p>
      <a href="/auth/signin" class="text-blue-600 hover:underline">Back to sign in</a>
    </div>
  </div>
</Layout>
