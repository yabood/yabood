---
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const projects = await getCollection(
  'projects',
  ({ data }) => (!data.status || data.status !== 'archived') && (import.meta.env.DEV || !data.draft)
);
const updates = await getCollection('updates', ({ data }) => !data.draft);

const projectsWithLatestUpdate = projects
  .map((project) => {
    const projectUpdates = updates
      .filter((update) => update.data.project === project.slug)
      .sort((a, b) => b.data.date.getTime() - a.data.date.getTime());

    const latestUpdate = projectUpdates[0];
    const lastUpdatedDate = latestUpdate ? latestUpdate.data.date : project.data.startDate;

    return {
      ...project,
      latestUpdate,
      lastUpdatedDate,
      updateCount: projectUpdates.length,
    };
  })
  .sort((a, b) => b.lastUpdatedDate.getTime() - a.lastUpdatedDate.getTime());
---

<BaseLayout
  title="Projects"
  description="Explore my portfolio of projects and open-source contributions">
  <Header />

  <main id="main" class="container mx-auto max-w-3xl px-4 py-12">
    <div class="mb-12 text-center">
      <h1 class="mb-4 text-4xl font-bold tracking-tight text-gray-900 dark:text-white sm:text-5xl">
        Projects
      </h1>
      <p class="mx-auto max-w-2xl text-lg text-gray-600 dark:text-gray-400">
        A collection of my work, from open-source contributions to personal experiments.
      </p>
    </div>

    <div class="grid gap-6 md:grid-cols-2">
      {
        projectsWithLatestUpdate.map((project) => (
          <article class="group rounded-lg border border-gray-200 bg-white p-6 transition-all hover:border-accent hover:shadow-lg dark:border-gray-800 dark:bg-gray-900 dark:hover:border-accent-light">
            <a href={`/projects/${project.slug}`} class="block">
              <h2 class="mb-2 text-xl font-semibold text-gray-900 group-hover:text-accent dark:text-white dark:group-hover:text-accent-light">
                {project.data.title}
              </h2>

              <p class="mb-4 text-gray-600 dark:text-gray-400">
                {project.latestUpdate
                  ? project.latestUpdate.data.summary
                  : project.data.description}
              </p>

              <div class="mb-4 flex flex-wrap gap-2">
                {project.data.tags.map((tag) => (
                  <span class="rounded-full bg-gray-100 px-3 py-1 text-xs font-medium text-gray-700 dark:bg-gray-800 dark:text-gray-300">
                    {tag}
                  </span>
                ))}
              </div>

              <div class="flex items-center justify-between text-sm text-gray-500 dark:text-gray-400">
                <div class="flex items-center gap-2">
                  <time datetime={project.lastUpdatedDate.toISOString()}>
                    Updated{' '}
                    {project.lastUpdatedDate.toLocaleDateString('en-US', {
                      month: 'short',
                      day: 'numeric',
                      year: 'numeric',
                    })}
                  </time>
                  {project.data.draft && (
                    <>
                      <span>Â·</span>
                      <span class="text-yellow-600 dark:text-yellow-500 font-medium">Draft</span>
                    </>
                  )}
                </div>
                {project.updateCount > 0 && (
                  <span class="text-accent dark:text-accent-light">
                    {project.updateCount} update{project.updateCount !== 1 ? 's' : ''}
                  </span>
                )}
              </div>
            </a>

            <div class="mt-4 flex gap-4 border-t border-gray-100 pt-4 dark:border-gray-800">
              {project.data.github && (
                <a
                  href={project.data.github}
                  class="inline-flex items-center text-sm font-medium text-accent hover:text-accent-dark dark:text-accent-light dark:hover:text-accent"
                  target="_blank"
                  rel="noopener noreferrer"
                  onclick="(event) => event.stopPropagation()">
                  <svg
                    class="mr-1 h-4 w-4"
                    fill="currentColor"
                    viewBox="0 0 24 24"
                    aria-hidden="true">
                    <path
                      fill-rule="evenodd"
                      d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"
                      clip-rule="evenodd"
                    />
                  </svg>
                  GitHub
                </a>
              )}

              {project.data.website && (
                <a
                  href={project.data.website}
                  class="inline-flex items-center text-sm font-medium text-accent hover:text-accent-dark dark:text-accent-light dark:hover:text-accent"
                  target="_blank"
                  rel="noopener noreferrer"
                  onclick="(event) => event.stopPropagation()">
                  <svg class="mr-1 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                    />
                  </svg>
                  Live Demo
                </a>
              )}
            </div>
          </article>
        ))
      }
    </div>
  </main>

  <Footer />
</BaseLayout>
