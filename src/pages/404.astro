---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<BaseLayout title="404 - Page Not Found" description="The page you're looking for doesn't exist">
  <Header />

  <main id="main" class="container mx-auto flex min-h-[60vh] max-w-3xl items-center px-4">
    <div class="mx-auto text-center">
      <p class="text-base font-semibold text-accent dark:text-accent-light">404</p>
      <h1 class="mt-4 text-4xl font-bold tracking-tight text-gray-900 dark:text-white sm:text-5xl">
        Page not found
      </h1>
      <p class="mt-6 text-lg text-gray-600 dark:text-gray-400">
        Sorry, we couldn't find the page you're looking for.
      </p>
      <div class="mt-10 flex items-center justify-center gap-x-6">
        <a
          href="/"
          class="rounded-lg bg-accent px-6 py-3 text-sm font-medium text-white transition-colors hover:bg-accent-dark">
          Go back home
        </a>
        <a
          href="/contact"
          class="text-sm font-medium text-gray-900 hover:text-accent dark:text-gray-100 dark:hover:text-accent-light">
          Contact support <span aria-hidden="true">â†’</span>
        </a>
      </div>
    </div>
  </main>

  <Footer />
</BaseLayout>
