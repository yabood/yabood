---
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { calculateReadingTime } from '../utils/readingTime';

const allPosts = (await getCollection('blog'))
  .filter((post) => !post.data.draft)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 5);

const posts = await Promise.all(
  allPosts.map(async (post) => {
    const content = await post.body;
    const readingTime = calculateReadingTime(content);
    return { ...post, readingTime };
  })
);
---

<BaseLayout
  title="Home"
  description="Welcome to Yabood - A personal blog about technology, development, and creativity">
  <Header />

  <main id="main" class="container mx-auto max-w-4xl px-4 py-12">
    <section class="mb-16 text-center">
      <h1 class="mb-4 text-5xl font-bold tracking-tight text-gray-900 dark:text-white sm:text-6xl">
        Welcome to <span class="text-accent">Yabood</span>
      </h1>
      <p class="mx-auto max-w-2xl text-lg text-gray-600 dark:text-gray-400">
        A personal blog about technology, development, and creativity. Sharing insights, tutorials,
        and thoughts on building better software.
      </p>
      <div class="mt-8 flex justify-center gap-4">
        <a
          href="/about"
          class="rounded-lg bg-accent px-6 py-3 text-sm font-medium text-white transition-colors hover:bg-accent-dark">
          Learn More
        </a>
        <a
          href="/blog"
          class="rounded-lg border border-gray-300 bg-white px-6 py-3 text-sm font-medium text-gray-700 transition-colors hover:bg-gray-50 dark:border-gray-700 dark:bg-gray-800 dark:text-gray-300 dark:hover:bg-gray-700">
          Read Blog
        </a>
      </div>
    </section>

    {
      posts.length > 0 && (
        <section>
          <div class="mb-8">
            <h2 class="text-3xl font-bold text-gray-900 dark:text-white">Latest Posts</h2>
          </div>

          <div class="space-y-6">
            {posts.map((post) => (
              <article class="group">
                <a href={`/blog/${post.slug}`} class="block">
                  <div class="flex items-start justify-between">
                    <div class="flex-1">
                      <div class="text-sm text-gray-500 dark:text-gray-500">
                        <time datetime={post.data.pubDate.toISOString()}>
                          {post.data.pubDate.toLocaleDateString('en-US', {
                            year: 'numeric',
                            month: 'long',
                            day: 'numeric',
                          })}
                        </time>
                        <span class="mx-2">Â·</span>
                        <span>{post.readingTime}</span>
                      </div>
                      <h3 class="mt-2 text-xl font-semibold text-gray-900 group-hover:text-accent dark:text-white dark:group-hover:text-accent-light">
                        {post.data.title}
                      </h3>
                      <p class="mt-2 text-gray-600 dark:text-gray-400">
                        {post.data.description}
                      </p>
                      {post.data.tags && post.data.tags.length > 0 && (
                        <div class="mt-3 flex flex-wrap gap-2">
                          {post.data.tags.map((tag) => (
                            <span class="rounded-full bg-gray-100 px-2 py-1 text-xs text-gray-600 dark:bg-gray-800 dark:text-gray-400">
                              #{tag}
                            </span>
                          ))}
                        </div>
                      )}
                    </div>
                    <svg class="ml-4 mt-1 h-5 w-5 flex-shrink-0 text-gray-400 transition-transform group-hover:translate-x-1 group-hover:text-accent dark:text-gray-600 dark:group-hover:text-accent-light" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M9 5l7 7-7 7"
                      />
                    </svg>
                  </div>
                </a>
              </article>
            ))}
          </div>

          <div class="mt-8 text-center">
            <a
              href="/blog"
              class="inline-flex items-center text-base font-medium text-accent hover:text-accent-dark dark:text-accent-light dark:hover:text-accent">
              View all posts
              <svg class="ml-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 5l7 7-7 7"
                />
              </svg>
            </a>
          </div>
        </section>
      )
    }
  </main>

  <Footer />
</BaseLayout>
