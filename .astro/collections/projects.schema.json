{
  "$ref": "#/definitions/projects",
  "definitions": {
    "projects": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "startDate": {
          "anyOf": [
            {
              "type": "string",
              "format": "date-time"
            },
            {
              "type": "string",
              "format": "date"
            },
            {
              "type": "integer",
              "format": "unix-time"
            }
          ]
        },
        "endDate": {
          "anyOf": [
            {
              "type": "string",
              "format": "date-time"
            },
            {
              "type": "string",
              "format": "date"
            },
            {
              "type": "integer",
              "format": "unix-time"
            }
          ]
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        },
        "status": {
          "type": "string",
          "enum": [
            "active",
            "completed",
            "paused",
            "archived"
          ],
          "default": "active"
        },
        "currentPhase": {
          "type": "string",
          "enum": [
            "idea",
            "research",
            "implementation",
            "release",
            "iteration",
            "archived"
          ]
        },
        "github": {
          "type": "string",
          "format": "uri"
        },
        "website": {
          "type": "string",
          "format": "uri"
        },
        "cover": {
          "type": "string"
        },
        "releases": {
          "type": "number",
          "default": 0
        },
        "contributors": {
          "type": "number",
          "default": 1
        },
        "draft": {
          "type": "boolean",
          "default": false
        },
        "$schema": {
          "type": "string"
        }
      },
      "required": [
        "title",
        "description",
        "startDate",
        "currentPhase"
      ],
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}